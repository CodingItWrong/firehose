{{#if session.isAuthenticated}}
  <h1>Unread Links</h1>

  <form onsubmit={{action 'handleAdd'}}>
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-md-10">
        <div class="form-group">
          {{input data-test-url value=url id="url" type="url" placeholder="URL to Add" classNames="form-control"}}
        </div>
      </div>
      <div class="col-xs-12 col-sm-4 col-md-2">
        <div class="form-group">
          <button data-test-add-button type="submit" class="btn btn-primary btn-block">Add</button>
        </div>
      </div>
    </div>
  </form>
{{/if}}

<ul class="list-group" data-test-links>
  {{#if session.isAuthenticated}}
    {{#each loggedInSortedLinks as |link|}}
      {{link-row link=link showIfRead=false}}
    {{/each}}
  {{else}}
    {{#each loggedOutSortedLinks as |link|}}
      {{link-row link=link}}
    {{/each}}
  {{/if}}
</ul>
