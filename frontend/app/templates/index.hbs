{{#if session.isAuthenticated}}
  <h1>Unread Links</h1>

  <div class="form-group">
    {{#link-to 'links.new' data-test-add-link classNames='btn btn-default'}}Add{{/link-to}}
  </div>
{{/if}}

<ul class="list-group" data-test-links>
  {{#if session.isAuthenticated}}
    {{#each model as |link|}}
      {{link-row link=link showIfRead=false}}
    {{/each}}
  {{else}}
    {{#each model as |link|}}
      {{link-row link=link}}
    {{/each}}
  {{/if}}
</ul>
