<form onsubmit={{action "handleSave"}}>
  <div class="form-group">
    <label>URL</label>
    <p class="form-control-static">
      <a href={{ link.url }}>{{ link.url }}</a>
    </p>
  </div>
  <div class="form-group">
    <label for="title">Title</label>
    {{input
      data-test-title
      id="title"
      classNames="form-control"
      value=buffer.title
    }}
  </div>
  <div class="form-group">
    <label for="source">Source</label>
    {{input
      data-test-source
      id="source"
      autocapitalize="off"
      autocorrect="off"
      classNames="form-control"
      value=buffer.source
    }}
  </div>
  <div class="form-group">
    <label for="tag_list">Tags</label>
    {{input
      data-test-tags
      id="tag_list"
      autocapitalize="off"
      autocorrect="off"
      classNames="form-control"
      value=buffer.tag_list
    }}
  </div>
  <div class="form-group">
    <label for="public">Public</label>
    {{input
      data-test-public
      type="checkbox"
      id="public"
      checked=buffer.public
    }}
  </div>
  <div class="form-group">
    <label for="comment">Comment</label>
    {{textarea
      data-test-comment
      id="comment"
      class="form-control"
      value=buffer.comment
    }}
  </div>
  <div class="float-right">
    <BsButton
      type="submit"
      @data-test-save-button
      @type="primary"
    >
      Save
    </BsButton>
    <BsButton
      type="button"
      @data-test-cancel-button
      @type="light"
      @onClick={{action "handleCancel"}}
    >
      Cancel
    </BsButton>
  </div>
</form>
