<div>
  <span class="link-title p-name"><a href="{{ link.url }}" target="_blank">{{ link.title }}</a></span>
  {{#if session.isAuthenticated}}
    {{#if link.public}}
      <span>Public</span>
    {{/if}}
  {{/if}}
</div>
{{#if link.comment}}
  <p class="e-content">{{ link.comment }}</p>
{{/if}}
<div class="pull-left text-muted">
  {{domain link.url}}
  {{#if link.tags}}
    |
    {{#each link.tags as |tag|}}
      <a href="/tags/{{ tag.name }}" class="p-category">{{ tag.name }}</a>
    {{/each}}
  {{/if}}
  {{#if link.source}}
    | {{format-source link.source}}
  {{/if}}
</div>
{{#if session.isAuthenticated}}
  <div class="pull-right">
    <div class="dropdown visible-xs-block visible-sm-block">
      <button class="btn btn-default" type="button" id="prayerActionMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"><span class="caret"></span></button>
      <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="prayerActionMenu">
        PUT LINKS HERE TOO
      </ul>
    </div>
    <div class="hidden-xs hidden-sm">
      {{#if link.read}}
        <button class="btn btn-default" data-test="button-mark-unread">Mark Unread</button>
      {{else}}
        <button class="btn btn-default" data-test="button-mark-read">Mark Read</button>
      {{/if}}
      <button class="btn btn-default" data-test="button-edit">Edit</button>
      <button class="btn btn-danger" data-test="button-delete">Delete</button>
    </div>
  </div>
{{/if}}
