  <label>Url</label>
  <p class="form-control-static"><a href="{{ model.url }}">{{ model.url }}</a></p>
</div>
<div class='form-group'>
  <label for="title">Title</label>
  {{input data-test-title id="title" classNames="form-control" value=model.title}}
</div>
<div class='form-group'>
  <label for="source">Source</label>
  {{input data-test-source id="source" autocapitalize="off" autocorrect="off" classNames="form-control"}}
</div>
<div class='form-group'>
  <label for="public">Public</label>
  {{input data-test-public type="checkbox" id="public"}}
</div>
<div class='form-group'>
  <label for="comment">Comment</label>
  {{textarea data-test-comment id="comment" class="form-control"}}
</div>
